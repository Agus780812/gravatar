{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "ES2020",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"stripInternal": true,
		"outDir": "dist",
		"types": [ "node" ]
	},
	"include": [ "src", "**/*.test.ts" ]
}
